<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E37474"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="224dp"
        android:layout_height="185dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="#F47C36"
        android:contentDescription="Torism"
        app:srcCompat="@drawable/kerala"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-183dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:fontFamily="cursive"
        android:paddingEnd="35dp"
        android:text="Gods Own Country"
        android:textColor="#1E1C1C"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:text=" Kerala Tourism"
        android:textColor="#1C1B1B"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="62dp"
        android:layout_toEndOf="@id/imageView"
        android:text=" Houseboat"
        android:textColor="#1C1B1B"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@id/imageView"
        android:background="#85D32C"
        android:text=" Start Booking " />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:background="#A3C843"
        app:srcCompat="@drawable/pic3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="379dp"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:paddingStart="270dp"
        android:paddingTop="40dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>